# -*- mode: ruby -*-
# vi: set ft=ruby :

# Every Vagrant development environment requires a box. You can search for
# boxes at https://vagrantcloud.com/search.
BOX_IMAGE = "generic/ubuntu2004"

# Naming
MASTER_PREFIX = "master"
WORKER_PREFIX = "worker"
LB_NAME = "lb01"

# Networking
HOST_ONLY_NETWORK = "192.168.68"
LB_IP = 5
MASTER_IP_START_AT = 10
WORKER_IP_START_AT = 20

# Spec
MASTER_NODES = 3
MASTER_CPU = 1
MASTER_RAM = 2048

WORKER_NODES = 3
WORKER_CPU = 1
WORKER_RAM = 2048

LB_CPU = 1
LB_RAM = 2048


Vagrant.configure("2") do |config|
  # LB node
  config.vm.define LB_NAME do |l|
    l.vm.provider "virtualbox" do |v|
      v.name = "k8s-#{LB_NAME}"
      v.cpus = LB_CPU
      v.memory = LB_RAM
    end

    l.vm.box = BOX_IMAGE
    l.vm.hostname = LB_NAME
    l.vm.network "private_network", ip: "#{HOST_ONLY_NETWORK}.#{LB_IP}"

    l.vm.provision :salt do |s|
      s.minion_config = "saltstack/etc/#{LB_NAME}"
      s.minion_key = "saltstack/keys/#{LB_NAME}.pem"
      s.minion_pub = "saltstack/keys/#{LB_NAME}.pub"
      s.install_type = "stable"
      s.colorize = true
      s.verbose = true
      s.bootstrap_options = "-P -c /tmp"
    end
  end

  # Master nodes
  (1..MASTER_NODES).each do |i|
    config.vm.define "#{MASTER_PREFIX}#{i}" do |m|
      m.vm.provider "virtualbox" do |v|
        v.name = "k8s-#{MASTER_PREFIX}#{i}"
        v.cpus = MASTER_CPU
        v.memory = MASTER_RAM
      end

      m.vm.box = BOX_IMAGE
      m.vm.hostname = "#{MASTER_PREFIX}#{i}"
      m.vm.network "private_network", ip: "#{HOST_ONLY_NETWORK}.#{MASTER_IP_START_AT + i}"

      m.vm.provision :salt do |s|
        s.minion_config = "saltstack/etc/#{MASTER_PREFIX}#{i}"
        s.minion_key = "saltstack/keys/#{MASTER_PREFIX}#{i}.pem"
        s.minion_pub = "saltstack/keys/#{MASTER_PREFIX}#{i}.pub"
        s.install_type = "stable"
        s.colorize = true
        s.verbose = true
        s.bootstrap_options = "-P -c /tmp"
      end
    end
  end

  # Worker nodes
  (1..WORKER_NODES).each do |i|
    config.vm.define "#{WORKER_PREFIX}#{i}" do |w|
      w.vm.provider "virtualbox" do |v|
        v.name = "k8s-#{WORKER_PREFIX}#{i}"
        v.cpus = WORKER_CPU
        v.memory = WORKER_RAM
      end

      w.vm.box = BOX_IMAGE
      w.vm.hostname = "#{WORKER_PREFIX}#{i}"
      w.vm.network "private_network", ip: "#{HOST_ONLY_NETWORK}.#{WORKER_IP_START_AT + i}"

      w.vm.provision :salt do |s|
        s.minion_config = "saltstack/etc/#{WORKER_PREFIX}#{i}"
        s.minion_key = "saltstack/keys/#{WORKER_PREFIX}#{i}.pem"
        s.minion_pub = "saltstack/keys/#{WORKER_PREFIX}#{i}.pub"
        s.install_type = "stable"
        s.colorize = true
        s.verbose = true
        s.bootstrap_options = "-P -c /tmp"
      end
    end
  end
end
